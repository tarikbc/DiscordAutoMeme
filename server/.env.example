# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/discord-auto-content

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Discord Worker Settings
WORKER_RECONNECT_DELAY=5000
WORKER_MAX_RESTART_ATTEMPTS=3
WORKER_STATUS_INTERVAL=60000

# Encryption
ENCRYPTION_KEY=32-character-secret-key-for-dev-only
ENCRYPTION_ALGORITHM=aes-256-gcm

# JWT Authentication
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=refresh-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15
PASSWORD_RESET_EXPIRES=1 